<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Sonata\UserBundle\Entity\User" inheritance-type="SINGLE_TABLE" table="fos_user_user" >
        <discriminator-column name="user_type" type="integer" />
        <discriminator-map>
            <discriminator-mapping value="0" class="UserAdmin" />
            <discriminator-mapping value="1" class="UserMetodist" />
            <discriminator-mapping value="2" class="UserTeacher" />
        </discriminator-map>

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="patronymic" type="string" length="100" nullable="true" unique="false" />
        <field name="address" type="string" length="200" nullable="true" unique="false" />
        <field name="comment" type="text" nullable="true" unique="false" />

    </entity>

</doctrine-mapping>

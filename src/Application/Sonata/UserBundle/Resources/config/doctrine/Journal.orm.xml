<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Sonata\UserBundle\Entity\Journal" table="journal">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="isAbsent" column="is_absent" type="boolean" nullable="false" unique="false" />
        <field name="remark" column="remark" type="string" length="255" nullable="true" unique="false" />
        <field name="assessment" column="assessment" type="integer" nullable="true" unique="false" />
        <many-to-one field="pupilGroup" target-entity="Application\Sonata\UserBundle\Entity\PupilGroupAssociation">
            <join-columns>
                <join-column  name="pupil_group_id" referenced-column-name="id" nullable="false"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
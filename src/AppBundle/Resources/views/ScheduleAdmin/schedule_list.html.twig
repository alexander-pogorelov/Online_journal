                                    <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName].group }}</td>
                                    <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName].teacher }}</td>
                                {% else %}
                                    <td class="cell_table bottom_left"><br></td>
                                    <td class="cell_table"><br></td>
                                    <td class="cell_table"><br></td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% else %}
                        <tr>
                            <td class="head_table" width="80px">{{ timeinterval }}</td>
                            {% for classroom in classrooms %}
                                {% if scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName] is defined %}
                                    <td class="cell_table bottom_left">{{ scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName].subject }}</td>
                                    <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName].group }}</td>
                                    <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][classroom.getClassroom.getName].teacher }}</td>
                                {% else %}
                                    <td class="cell_table bottom_left"><br></td>
                                    <td class="cell_table"><br></td>
                                    <td class="cell_table"><br></td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div id="tab4" style="background: white; display:none;">
    {% block list_table %}
        {{ parent() }}
    {% endblock %}
    </div>
{%- endblock sonata_admin_content -%}
              {% for weekday in weekdays %}
                    {% for timeinterval in timeintervals %}
                        {% if loop.first %}
                            <tr class="top_line">
                                <td  rowspan={{ loop.length }} height=75>{{ weekday }}</td>
                                <td class="head_table" width="80px">{{ timeinterval }}</td>
                                {% for group in groups %}
                                    {% if scheduleKeysArray[weekday][timeinterval.id][group.group.groupName] is defined %}
                                        <td class="cell_table bottom_left">{{ scheduleKeysArray[weekday][timeinterval.id][group.group.groupName].subject }}</td>
                                        <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][group.group.groupName].classroom }}</td>
                                        <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.getId][group.group.groupName].teacher }}</td>
                                    {% else %}
                                        <td class="cell_table bottom_left"><br></td>
                                        <td class="cell_table"><br></td>
                                        <td class="cell_table"><br></td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% else %}
                            <tr>
                                <td class="head_table" width="80px">{{ timeinterval }}</td>
                                {% for group in groups %}
                                    {% if scheduleKeysArray[weekday][timeinterval.id][group.group.groupName] is defined %}
                                        <td class="cell_table bottom_left">{{ scheduleKeysArray[weekday][timeinterval.id][group.group.groupName].subject }}</td>
                                        <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.id][group.group.groupName].classroom }}</td>
                                        <td class="cell_table">{{ scheduleKeysArray[weekday][timeinterval.getId][group.group.groupName].teacher }}</td>
                                    {% else %}
                                        <td class="cell_table bottom_left"><br></td>
                                        <td class="cell_table"><br></td>
                                        <td class="cell_table"><br></td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>

    </div>
    {# по аудиториям #}
    <div id="tab3" style="background: white; display:none;">
        <table rules=all border=4>
            <tbody>
            <tr>
                <td  colspan=2 rowspan=2 width="130px" class="head_table" >Время занятий</td>
